
	{# Réinitialisation du mot de passe #}

	{% extends 'base.html.twig' %}
	
	{# Réécriture SEO #}
	{% block header %}

		{% embed "include/header.html.twig" %}
			
			{# Titre #}
			{% block seo_title %}
				
				Réinitialiser le mot de passe - ArcOffice

			{% endblock seo_title %}
			
			{# Description #}
			{% block seo_description %}{% endblock seo_description %}

		{% endembed %}

	{% endblock header %}

	{# Body Class #}
	{% block body_class %}arcoffice-fosuser{% endblock %}

	{# Navigation #}
	{% block navigation %}{% endblock navigation %}

	{# Section 'Fil d'ariane' #}
	{% block fil_ariane %}{% endblock fil_ariane %}
	
	{# Contenu #}
	{% block content %}

		{% trans_default_domain 'FOSUserBundle' %}

		<div class="d-flex justify-content-center align-items-center">

			<div class="arcoffice-fosuser-sub">

				<p class="lead text-center">Réinitialiser votre mot de passe</p>

				<p>{{ 'resetting.check_email'|trans({'%tokenLifetime%': tokenLifetime})|nl2br }}</p>

				<a class="d-flex small" href="{{ path('fos_user_security_login') }}">← Connexion</a>

			</div>

		</div>

	{% endblock content %}
